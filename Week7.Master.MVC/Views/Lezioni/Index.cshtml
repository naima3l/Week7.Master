@model List<LezioneViewModel>

<h1>Ecco la lista delle lezioni</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id Lezione</th>
            <th scope="col">Data e ora</th>
            <th scope="col">Durata</th>
            <th scope="col">Aula</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LezioneId</td>
                <td>@item.DataOraInizio</td>
                <td>@item.Durata</td>
                <td>@item.Aula</td>
            </tr>
        }
    </tbody>
</table>