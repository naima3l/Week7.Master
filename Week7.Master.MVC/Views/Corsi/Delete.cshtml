@model CorsoViewModel


<form method="post">
    <p>Sei sicuro di voler eliminare il corso @Model.CorsoCodice - @Model.Nome ?</p>

    <div class="form-group">
        <label asp-for="CorsoCodice"></label>
        <input asp-for="CorsoCodice" class="form-control" readonly />
        <span asp-validation-for="CorsoCodice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descrizione" class="form-label"></label>
        <input asp-for="Descrizione" class="form-control" readonly />
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>

    <input type="submit" value="Conferma" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="Index" role="button">Back</a>
</form>
